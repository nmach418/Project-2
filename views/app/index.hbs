{{#if hazards}}
  <ul class="hazards">
    {{#each hazards}}
      <div class="card">
        <div class="card-content">
          <a class="card-title" href="/hazard/{{id}}">
            <p>Waterway: {{ waterwayName }}</p>
            <p>Location: {{ location }}</p>
            <p>LatLng: {{ latLng }} </p>
            <p>Hazard Description: {{ hazDesc }} </p>
          </a>
        </div>
        <div class="card-action">
          <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
          <span class="hazard__date">{{ createdAt }}</span>
          <span class="hazard_comments">{{ comments.length }} Comment </span>
        </div>
      </div>
    {{/each}}
  </ul>
{{/if}}